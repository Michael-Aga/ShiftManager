<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shiftmanager">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShiftManager"
        tools:targetApi="31">

        <!-- Activities from the first manifest file -->
        <activity
            android:name=".CalculateActivity"
            android:exported="false" />

        <activity
            android:name=".SickDaysActivity"
            android:exported="false" />

        <activity
            android:name=".TravelingExpensesActivity"
            android:exported="false"
            android:label="@string/title_activity_traveling_expenses"
            android:theme="@style/Theme.ShiftManager" />

        <activity
            android:name=".BreaksActivity"
            android:exported="false" />

        <activity
            android:name=".SalaryActivity"
            android:exported="false" />

        <activity
            android:name=".MainWorkMenu"
            android:exported="false" />

        <activity
            android:name=".MainCurrWork"
            android:exported="false" />

        <activity
            android:name=".MainShifts"
            android:exported="false" />

        <activity
            android:name=".MainPreWork"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity from the second manifest file -->
        <activity
            android:name=".ExtraHoursActivity"
            android:exported="false" />

    </application>

</manifest>
